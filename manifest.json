{
  "name": "metaview",
  "version": "2.0.2",
  "manifest_version": 3,
  "description": "Bookmark web pages to Scrapbox. ",
  "background": {
    "service_worker": "dist/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/content.js"],
      "run_at": "document_end"
    }
  ],
  "icons": { "16": "icon16.png", "48": "icon48.png", "128": "icon128.png" },
  "options_page": "options.html",
  "permissions": ["bookmarks", "storage"]
}
